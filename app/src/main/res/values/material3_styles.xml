<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Material 3 Button Styles -->
    <style name="Widget.Material3.Button" parent="Widget.MaterialComponents.Button" tools:ignore="ResourceName">
        <item name="android:textAppearance">@style/TextAppearance.Material3.Button</item>
        <item name="backgroundTint">@color/coffee_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.Material3.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton" tools:ignore="ResourceName">
        <item name="android:textColor">@color/coffee_primary</item>
        <item name="rippleColor">@color/coffee_primary_10</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton" tools:ignore="ResourceName">
        <item name="strokeColor">@color/coffee_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/coffee_primary</item>
        <item name="rippleColor">@color/coffee_primary_10</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Material 3 CardView -->
    <style name="Widget.Material3.CardView" parent="Widget.MaterialComponents.CardView" tools:ignore="ResourceName">
        <item name="cardBackgroundColor">@color/coffee_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardMaxElevation">8dp</item>
    </style>

    <!-- Material 3 Floating Action Button -->
    <style name="Widget.Material3.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton" tools:ignore="ResourceName">
        <item name="backgroundTint">@color/coffee_primary</item>
        <item name="android:tint">@color/white</item>
        <item name="fabSize">normal</item>
        <item name="elevation">6dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Material 3 Extended Floating Action Button -->
    <style name="Widget.Material3.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton" tools:ignore="ResourceName">
        <item name="backgroundTint">@color/coffee_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Material 3 Text Appearance -->
    <style name="TextAppearance.Material3.Button" parent="TextAppearance.MaterialComponents.Button" tools:ignore="ResourceName">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
</resources>
