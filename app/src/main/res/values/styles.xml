<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Text Appearance Styles -->
    <style name="TextAppearance.CoffeeShop.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/coffeeshop_coffee_text_primary</item>
    </style>

    <!-- Shape Appearance Styles -->
    <style name="ShapeAppearanceOverlay.CoffeeShop.RoundedCornerSmall" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.CoffeeShop.Button" parent="Widget.MaterialComponents.Button" tools:ignore="ResourceName">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="backgroundTint">@color/coffeeshop_coffee_primary</item>
        <item name="android:textColor">@color/coffeeshop_white</item>
        <item name="cornerRadius">@dimen/coffeeshop_button_corner_radius</item>
        <item name="android:paddingStart">@dimen/coffeeshop_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/coffeeshop_button_padding_horizontal</item>
        <item name="android:minHeight">@dimen/coffeeshop_button_min_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.CoffeeShop.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton" tools:ignore="ResourceName">
        <item name="android:textColor">@color/coffeeshop_coffee_primary</item>
        <item name="rippleColor">@color/coffeeshop_coffee_primary_10</item>
        <item name="android:minHeight">@dimen/coffeeshop_button_min_height</item>
        <item name="android:paddingStart">@dimen/coffeeshop_button_text_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/coffeeshop_button_text_padding_horizontal</item>
    </style>

    <style name="Widget.CoffeeShop.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton" tools:ignore="ResourceName">
        <item name="strokeColor">@color/coffeeshop_coffee_primary</item>
        <item name="strokeWidth">@dimen/coffeeshop_button_stroke_width</item>
        <item name="android:textColor">@color/coffeeshop_coffee_primary</item>
        <item name="rippleColor">@color/coffeeshop_coffee_primary_10</item>
        <item name="cornerRadius">@dimen/coffeeshop_button_corner_radius</item>
        <item name="android:minHeight">@dimen/coffeeshop_button_min_height</item>
        <item name="android:paddingStart">@dimen/coffeeshop_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/coffeeshop_button_padding_horizontal</item>
    </style>

    <!-- CardView -->
    <style name="Widget.CoffeeShop.CardView" parent="Widget.MaterialComponents.CardView" tools:ignore="ResourceName">
        <item name="cardBackgroundColor">@color/coffeeshop_coffee_surface</item>
        <item name="cardElevation">@dimen/coffeeshop_card_elevation</item>
        <item name="cardCornerRadius">@dimen/coffeeshop_card_corner_radius</item>
        <item name="contentPadding">@dimen/coffeeshop_card_content_padding</item>
        <item name="cardMaxElevation">@dimen/coffeeshop_card_max_elevation</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.CoffeeShop.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton" tools:ignore="ResourceName">
        <item name="backgroundTint">@color/coffeeshop_coffee_primary</item>
        <item name="android:tint">@color/coffeeshop_white</item>
        <item name="fabSize">normal</item>
        <item name="elevation">@dimen/coffeeshop_fab_elevation</item>
        <item name="android:padding">@dimen/coffeeshop_fab_padding</item>
    </style>
    
    <!-- Extended Floating Action Button -->
    <style name="Widget.CoffeeShop.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton" tools:ignore="ResourceName">
        <item name="backgroundTint">@color/coffeeshop_coffee_primary</item>
        <item name="android:textColor">@color/coffeeshop_white</item>
        <item name="iconTint">@color/coffeeshop_white</item>
        <item name="cornerRadius">@dimen/coffeeshop_button_corner_radius</item>
        <item name="elevation">@dimen/coffeeshop_fab_elevation</item>
        <item name="android:minHeight">@dimen/coffeeshop_button_min_height</item>
        <item name="android:paddingStart">@dimen/coffeeshop_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/coffeeshop_button_padding_horizontal</item>
    </style>
</resources>
